{% layout 'layout.liquid' %}
{% block content %}
    <div class="container-md">
        <article>
            <h2>
                {{ recipe.name }} - 
                
            </h2>
            <h3></h3>
            
        </article>
        <div class="card" style="width: 18rem;">
                    <h5 class="card-header">{{recipe.name}}</h5>
                    <div class="card-body">
                        
                        <p class="card-text"> 
                            This is a recipe for {{recipe.name}}
                            <br>
                            
                        </p>
                        <ul>
                        {% for ingreds in recipe.ingredients%}
                            
                            <li class="list-group-item">{{ingreds.name}} {{ingreds.amount}} {{ingreds.measurement}}</li>
                            {% endfor %}
                        </ul>
                        
                    </div>
                </div>
                {% if recipe.owner == userId  %}
                <div class="btn-group">
                    <a  class="btn btn-primary" href="/recipes/edit/{{recipe.id}}">Edit</a>
                    <form action="/recipes/{{recipe._id}}?_method=DELETE" method="POST">
                        <input type="submit" value="Delete" class="btn btn-danger">
                    </form>
                </div>
            {% endif %}
        <div class="col-md-6">
            {%- comment -%} <form action="/ratings/{{recipe.id}}" method="POST">
                <fieldset>
                    <legend>Add Rating</legend>

                </fieldset>
                <select class="form-control" id="rating" name="rating">
                    <option name="rating">1</option>
                    <option name="rating">2</option>
                    <option name="rating">3</option>
                    <option name="rating">4</option>
                    <option name="rating">5</option>
                    
                    </select>
                    <input  type="submit" class="btn btn-success" action="/rating/{{recipe.id}}" method="POST">
            </form> {%- endcomment -%}
        </div>
    </div>
{% endblock %}
